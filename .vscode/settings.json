{
    "python.linting.mypyArgs": [
        "--follow-imports=silent",
        "--ignore-missing-imports",
        "--show-column-numbers",
        "--no-pretty",
        "--strict"
    ],
    "[python]": {
        "editor.codeActionsOnSave": [
            "source.organizeImports"
        ],
    },
    "python.analysis.fixAll": [
        "source.unusedImports",
        "source.convertImportFormat"
    ]
}